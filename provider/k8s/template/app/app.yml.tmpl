apiVersion: v1
kind: Namespace
metadata:
  name: {{.Namespace}}
  annotations:
    convox.com/lock: {{ .Locked }}
    convox.com/params: {{ safe (json .Parameters) }}
  labels:
    type: app
    name: {{.Name}}
  ownerReferences:
  - apiVersion: v1 # TODO: populate from .Owner
    blockOwnerDeletion: true
    controller: true
    kind: Namespace # TODO: populate from .Owner
    name: {{ .Owner.Name }}
    uid: {{ .Owner.UID }}
